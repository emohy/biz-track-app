rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isValidTimestamp(field) {
      return field is timestamp || field == request.time;
    }

    // Rules for user data
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Sub-collections: products, sales, customers, expenses
      match /{collection}/{docId} {
        allow read: if isOwner(userId);
        
        allow create: if isOwner(userId) 
          && request.resource.data.userId == userId
          && request.resource.data.createdAt == request.time
          && validateData(collection, request.resource.data);
          
        allow update: if isOwner(userId)
          && request.resource.data.userId == userId
          // Allow server timestamp for updates, or preserve existing
          && (request.resource.data.updatedAt == request.time || request.resource.data.updatedAt == resource.data.updatedAt)
          && validateData(collection, request.resource.data);

        allow delete: if isOwner(userId);
      }
    }

    function validateData(col, data) {
      // Basic Soft Delete fields
      let basicVal = (
        (data.isDeleted == null || data.isDeleted is bool)
        && (data.deletedAt == null || data.deletedAt is timestamp)
      );

      return basicVal && (
        col in ['products', 'test_products'] ? (
          data.productName is string && data.productName.size() > 0
          && (data.sellingPrice is number || data.sellingPrice is int) && data.sellingPrice >= 0
          && (data.costPrice is number || data.costPrice is int) && data.costPrice >= 0
          && (data.stockQuantity is number || data.stockQuantity is int)
        ) :
        col in ['sales', 'test_sales'] ? (
          data.productId is string
          && (data.quantitySold is number || data.quantitySold is int) && data.quantitySold > 0
          && (data.totalAmount is number || data.totalAmount is int) && data.totalAmount >= 0
          && data.paymentStatus in ['Paid', 'Partial', 'Unpaid']
          && (data.amountPaid is number || data.amountPaid is int) && data.amountPaid >= 0
        ) :
        col in ['customers'] ? (
          data.name is string && data.name.size() > 0
          && (data.phone == null || data.phone is string)
        ) :
        col in ['expenses', 'test_expenses'] ? (
          data.description is string
          && (data.amount is number || data.amount is int) && data.amount >= 0
        ) : true
      );
    }
  }
}
